FROM node:12

# installing graphicsmagick
RUN apt update
RUN apt install -y --no-install-recommends \
      graphicsmagick \
      && rm -rf /var/lib/apt/lists/*

RUN mkdir -p /opt/node/web
WORKDIR /opt/node/web

COPY ./build /opt/node/web/build
COPY ./scripts /opt/node/web/scripts
COPY ./src /opt/node/web/src
COPY ./.babelrc /opt/node/web
COPY ./package.json /opt/node/web
COPY ./README.md /opt/node/web

RUN chmod +x  /opt/node/web/scripts/*.sh

# COPY ./node_modules /opt/node/web/node_modules
# COPY ./dist /opt/node/web/dist

RUN npm i
# RUN npm i --registry=https://registry.npm.taobao.org
RUN npm run build:front

# start
CMD npx egg-born-scripts backend-start
